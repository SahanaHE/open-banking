		doc:name="API Autodiscovery" doc:id="99974e38-99ca-4e39-8a14-f8451597b96d" 
		flowRef="mainflow" /> -->
    <http:request-config name="openbanking-aspsp-exp-httpRequestConfig" doc:name="HTTP Request configuration" doc:id="0870f775-caa9-4eb4-82d1-c5af1596a4bd" basePath="${openbanking-aspsp-exp-api.base-path}">
        <http:request-connection protocol="HTTPS" host="${openbanking-aspsp-exp-api.host}" port="${openbanking-aspsp-exp-api.port}" connectionIdleTimeout="${openbanking-aspsp-exp-api.connection-idle-timeout}">
            <reconnection>
                <reconnect frequency="${openbanking-aspsp-exp-api.http-frequency}" count="${openbanking-aspsp-exp-api.http-reconnection-attempts}" />
            </reconnection>
            <http:authentication>
                <http:basic-authentication username="${fins-openbanking-pisp-dom-exp-api.http-client.client-id}" password="${fins-openbanking-pisp-dom-exp-api.http-client.client-secret}" />
            </http:authentication>
        </http:request-connection>
    </http:request-config>
    <validation:config name="Validation_Config" doc:name="Validation Config" doc:id="bcde0d2d-21cc-4ef1-8ef0-7b055f57b5a6" />
    <accelerator-banking:config name="accelerator-banking-config" doc:name="Accelerator Banking Config" doc:id="0e6a2bd0-7837-43f4-842e-226e7ad24a15" apiName="${api.name}" apiVersion="${api.version}" />
</mule>

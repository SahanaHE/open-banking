    <import doc:name="import-common-error-handler.xml" doc:id="26c5e93d-5bf0-4f6d-b39f-79c4b04b3792" file="common-error-handler.xml" />
    <http:listener-config name="openbanking-pisp-dom-exp-api-httpListenerConfig">
        <http:listener-connection host="${https.host}" port="${https.port}" protocol="HTTPS" tlsContext="common-selfsigned_tlsContext" />
    </http:listener-config>
    <apikit:config name="openbanking-pisp-dom-exp-api-config" api="resource::org.mule.examples:fins-openbanking-pisp-dom-exp-api-spec:1.3.3:raml:zip:fins-openbanking-pisp-dom-exp-api-spec.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
